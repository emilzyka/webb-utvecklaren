---
import { Image } from '@astrojs/image/components';
const { frontmatter, url } = Astro.props;
const { subtitle, img, description, hashtags } = frontmatter;
---

<article class='max-w-md rounded overflow-hidden shadow-lg dark:shadow-slate-900 mt-8'>
    {(Object.keys(img).length > 0) ? <Image
        src={img.src}
        alt={img.alt}
        width={900}
        height={500}
        format={'avif'}
        fit={'cover'}
        quality={75}
        aspectRatio={'4:3'}
        class="w-full"
      /> : <></>}
      <div class="px-6 py-4">
        <a class="font-bold text-xl mb-2 text-black dark:text-white" href={url}>{subtitle}</a>
        <p class="text-gray-400 text-base mt-2 text-left">{description}</p>
      </div>
      <div class="px-6 pt-4 pb-2">
        {hashtags.map((tag) => 
        <span class="inline-block bg-purple-300 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">#{tag}</span>
        )}
      </div>
</article>
